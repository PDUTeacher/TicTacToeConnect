<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/windowBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/panelGameStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/surface_bg"
            android:elevation="4dp"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvPlayerX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/surface_bg"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/player_you_x"
                android:textColor="@color/color_x"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvPlayerO"
                app:layout_constraintStart_toEndOf="@id/tvPlayerX"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPlayerO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/surface_bg"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/player_ai_o"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/panelStatsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/surface_bg"
            android:elevation="4dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/panelGameStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/btnToggleStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvStatsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_collapsed"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutStatsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingHorizontal="12dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvWins"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Перемог: 0"
                    android:textColor="@color/success"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDraws"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Нічиїх: 0"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvLosses"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Поразок: 0"
                    android:textColor="@color/error"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <GridLayout
            android:id="@+id/gameGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:columnCount="3"
            android:rowCount="3"
            app:layout_constraintBottom_toTopOf="@id/btnRestart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/panelStatsContainer">

            <Button android:id="@+id/btn_0" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_1" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_2" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_3" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_4" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_5" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_6" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_7" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />
            <Button android:id="@+id/btn_8" android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="4dp" android:background="@drawable/surface_bg" android:textSize="48sp" app:backgroundTint="@null" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/btn_restart"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gameGrid" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>